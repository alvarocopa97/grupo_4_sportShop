<!DOCTYPE html>
<html lang="es">
<!-- Head -->
    <%- include('partials/head') %>
<!-- /Head -->
<body>
    <!-- Header -->
	<%- include('partials/header') %>
	<!-- /Header -->

        <div class="slider">
			<ul>
                <li>
                    <img src="/images/oferta.png">
                </li>
                <li>
                    <img src="/images/oferta2.png">
                </li>
            </ul>
        </div> 
    <main>
        <div class="main-products">
            <div class="caja-title">
                <h4 class="title">Lo mas vendido</h4>
            </div>
            <div class="main-article">
                <% products.forEach(product => {%>
                    <section class="productos">
                        <article class="producto">
                            <img src="/images/products/<%=product.image %>" alt="">
                            <div class="detalles-productos">
                                <h6><%= product.product %></h6>
                                <h5 class="price">$<%= product.price %></h5>
                                <a class="boton" href="/products/detail/<%= product.id %>">Ver detalle</a>
                            </div>
                    </section>
                <% }) %>
            </div>
        </div>
        <div class="main-products">
            <div class="caja-title">
                <h4 class="title">Camisetas de Futbol</h4>
            </div>
            <div class="main-article">
                <% products.forEach(product => {%>
                    <section class="productos">
                        <article class="producto">
                            <img src="/images/remeras/<%=product.image %>" alt="">
                            <div class="detalles-productos">
                                <h6><%= product.product %></h6>
                                <h5 class="price">$<%= product.price %></h5>
                                <a class="boton" href="/products/detail/<%= product.id %>">Ver detalle</a>
                            </div>
                    </section>
                <% }) %>
            </div>
        </div>
</main>
    <!-- Footer -->
	<%- include('partials/footer') %>
	<!-- /Fototer -->
</body>
</html>


