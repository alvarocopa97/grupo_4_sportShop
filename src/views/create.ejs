<!DOCTYPE html>
<html lang="es">
    <link rel="stylesheet" href="/css/create.css">
<!-- Head -->
<%- include('partials/head') %>
    <!-- /Head -->

    <body>
        <!-- Header -->
        <%- include('partials/header') %>
        <!-- /Header -->
        
       
            <form action="/products/create" method="POST" enctype="multipart/form-data">
                <div class="create">
                <div class="title">
                <h3>Agregar Producto</h3>
                </div>
                    <div class="caja-datos">
                        <label for="name" class="form-label">Nombre del producto:</label><br>
                        <input type="text" id="name" name="name" placeholder="Ej: Zapatillas Reebok" class="form-input">
                    </div>
                    <div class="caja-datos">
                        <label for="price" class="form-label">Precio del producto:</label><br>
                        <input type="text" id="price" name="price" placeholder="Ej: 5678" class="form-input">
                    </div>
                    <div class="caja-datos">
                        <label for="image">Imagen:</label><br>
                         <input type="file" id="image" name="image" accept="image/*">
                    </div>
                    <div class="caja-datos">
                        <label for="description" class="form-label">Envio:</label><br>
                        <textarea name="envio" id="envio"  placeholder="Ej: Gratis" class="form-input"></textarea>
                    </div>
                    <div class="caja-datos">
                        <label for="description" class="form-label">Descipci√≥n:</label><br>
                        <textarea name="description" id="description" class="form-input"></textarea>
                    </div>
                    <div class="caja-datos">
                    <div class="boton">
                        <button type="submit" class="buy-button ">GUARDAR</button>
                    </div>
                   </div>

            </form>
        </div>
            
            <!-- Footer -->
            <%- include('partials/footer') %>
            <!-- /Fototer -->
    </body>

</html>