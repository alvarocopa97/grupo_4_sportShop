<!DOCTYPE html>
<html lang="es">
    <link rel="stylesheet" href="/css/listadoProd.css">
<!-- Head -->
<%- include('partials/head') %>
    <!-- /Head -->

    <body>
        <!-- Header -->
        <%- include('partials/header') %>
            <!-- /Header -->
            <main>
                <h1> Listado de Productos</h1>
                <a href="/products/create"><i class="fas fa-solid fa-plus"></i></a>
                <% products.forEach(function(product) { %>
                    <section class="productos">
                        <article class="producto">
                            <div class="caja-img-productos">
                                <img src="/images/products/<%= product.img %>" alt="">
                            </div>
                            <div class="detalles-productos">
                                <h4>
                                    <%= product.name %>
                                </h4>
                                <h3 class="price">$<%= product.price %>
                                </h3>
                                <a href="/products/editar/<%=product.id%>" class="action-button edit">EDITAR
                                    PRODUCTO</a>
                                <form action="/products/delete/<%=product.id%>" method="post">
                                    <a><button type="submit" class="action-button delete">ELIMINAR</button> </a> 
                                </form>
                            </div>
                        </article>
                    </section>
                <% }); %>
            </main>
            <!-- Footer -->
            <%- include('partials/footer') %>
                <!-- /Fototer -->
    </body>

</html>